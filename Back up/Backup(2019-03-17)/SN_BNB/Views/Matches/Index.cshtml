@model IEnumerable<SN_BNB.Models.Match>

@{
    ViewData["Title"] = "Index";
}
<br/>
<h2>Matches</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index">
    <input type="hidden" name="sortDirection" value="@ViewData["sortDirection"]" />
    <input type="hidden" name="sortField" value="@ViewData["sortField"]" />

    <nav class="navbar navbar-expand-lg navbar-light bg-light">



        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <div class="form-group">
                        <label>Search For Player</label>
                        @Html.TextBox("searchPos", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </li>
            </ul>
            <button class="btn btn-outline-success" type="submit" value="Filter">Search</button>
            <button class="btn btn-outline-secondary" type="submit">Clear</button>
        </div>
    </nav>
    <table class="table">
        <thead>
            <tr>
                @*<th>
                        <input type="submit" name="actionButton" value="Player1" class="btn btn-link" />
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Player2Score)
                    </th>*@
                <th>
                    <input type="submit" name="actionButton" value="Players" class="btn btn-link" />
                </th>
                <th>
                    <input type="submit" name="actionButton" value="Position" class="btn btn-link" />
                </th>
                <th>
                    <input type="submit" name="actionButton" value="Time" class="btn btn-link" />
                </th>
                <th>
                    <input type="submit" value="Fixture" class="btn btn-link" disabled="disabled" />
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Player1Score)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Player2Score)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.MatchPosition)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MatchTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fixture.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Player.FullName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
