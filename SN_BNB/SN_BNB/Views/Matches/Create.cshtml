@model SN_BNB.Models.Match

@{
    ViewData["Title"] = "Create";
}
<link href="~/css/button.css" rel="stylesheet" />
<br />
<h2>Create</h2>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FixtureID" class="control-label"></label>
                <select asp-for="FixtureID" class="form-control" asp-items="ViewBag.FixtureID" onchange="ddlpopulate()"></select>
            </div>
            <div class="form-group">
                <label asp-for="MatchPosition" class="control-label"></label>
                <input asp-for="MatchPosition" class="form-control" />
                <span asp-validation-for="MatchPosition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MatchTime" class="control-label"></label>
                <input asp-for="MatchTime" class="form-control" />
                <span asp-validation-for="MatchTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Player1ID" class="control-label"></label>
                <select asp-for="Player1ID" class="form-control" asp-items="ViewBag.Player1ID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Player2ID" class="control-label"></label>
                <select asp-for="Player2ID" class="form-control" asp-items="ViewBag.Player2ID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-light" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-light">Back to List</a>
</div>
<script>
    function ddlpopulate() {
        console.log("hello");
        var FixtureID = document.getElementById('FixtureID').value;
        $.get("../api/PlayersAPI/Home/" + FixtureID, function (data) {
            console.log(data);
        });

    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
