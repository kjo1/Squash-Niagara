@model SN_BNB.Models.Match

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Match</h4>
<hr />
<form asp-action="Edit">
    <div class="row">
        <div class="col-md-4">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Player1Score" class="control-label"></label>
                <input asp-for="Player1Score" class="form-control" />
                <span asp-validation-for="Player1Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player2Score" class="control-label"></label>
                <input asp-for="Player2Score" class="form-control" />
                <span asp-validation-for="Player2Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MatchPosition" class="control-label"></label>
                <input asp-for="MatchPosition" class="form-control" />
                <span asp-validation-for="MatchPosition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MatchTime" class="control-label"></label>
                <input asp-for="MatchTime" class="form-control" type="time" />
                <span asp-validation-for="MatchTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FixtureID" class="control-label"></label>
                <select asp-for="FixtureID" class="form-control" asp-items="ViewBag.FixtureID"></select>
                <span asp-validation-for="FixtureID" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group col-md-6">
                <label class="control-label"> Players</label> <button type="button" id="btnRight" class="btn-danger btn-sm">
                    <span class="glyphicon glyphicon-minus-sign" aria-hidden="true"></span>
                </button>
                @Html.ListBox("selectedOptions", (MultiSelectList)ViewBag.selOpts, new { @size = 10, @class = "form-control" })
            </div>

            <div class="form-group col-md-6">
                <label class="control-label"> Players</label> <button type="button" id="btnLeft" class="btn-danger btn-sm">
                    <span class="glyphicon glyphicon-minus-sign" aria-hidden="true"></span>
                </button>
                @Html.ListBox("availOptions", (MultiSelectList)ViewBag.availOpts, new { @size = 10, @class = "form-control" })

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_MultiselectPartial");}
}
