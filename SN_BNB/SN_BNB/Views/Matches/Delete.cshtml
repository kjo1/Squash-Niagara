@model SN_BNB.Models.Match

@{
    ViewData["Title"] = "Delete";
}
<link href="~/css/button.css" rel="stylesheet" />
<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Match</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Fixture)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Fixture.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MatchTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MatchTime)
        </dd>
        <dt>
            Home Player
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Player1.FullName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Player1Score)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Player1Score)
        </dd>
        <dt>
            Away Player
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Player2.FullName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Player2Score)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Player2Score)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MatchPosition)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MatchPosition)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-light" /> |
        <a asp-action="Index" class="btn btn-light">Back to List</a>
    </form>
</div>
