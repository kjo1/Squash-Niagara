@model SN_BNB.Models.Team

@{
    ViewData["Title"] = "Details";
}

<br /><br /><br />
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<body>
    <div class="container">
        <div class="media">
            <div class="media-left">
                <img src="https://www.jamf.com/jamf-nation/img/default-avatars/generic-user-purple.png" class="rounded-circle"><br />
            </div>
            <div class="media-body">
                <h3 class="media-heading">@Html.DisplayFor(model => model.TeamName)</h3>
                <h4 class="media-heading">@Html.DisplayFor(model => model.TeamBio) </h4>
                <hr />
                <div class="row">
                    <div class="col-1">

                    </div>
                    <div class="col-5">
                        <dl class ="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Division)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Division.DivisionName)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.TeamPoints)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.TeamPoints)
                            </dd>
                        </dl>
                    </div>
                    <div class="col-6">
                        <dl class ="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.TeamCreatedOn)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.TeamCreatedOn)
                            </dd>
                        </dl>
                    </div>


                </div>
            </div>


        </div>

        <div class="row">
            @*row*@
            <div class="col-6">
                <br />
                <h4>Players</h4>
                <hr />
                <ul>
                    @foreach (Player player in ViewBag.Players)
                    {
                        <li class="list-group">
                            @player.FullName
                        </li>
                    }
                </ul>
            </div>
            <div class="col-6">
                <div>
                    <br />
                    <h4>Schedule</h4>
                    <hr />
                        <ul style="list-style: none">
                            @foreach (SN_BNB.ViewModels.TeamScheduleVM f in ViewBag.Fixtures)
                            {
                                <li >
                                    <span id="dateTime">@f.Date</span>
                                    <span id="homeTeam">@(f.HomeTeamName ?? Model.TeamName)</span>
                                    <span style="font-weight:600; font-size:16px">vs</span>
                                    <span id="awayTeam">@(f.AwayTeamName ?? Model.TeamName)</span>
                                </li>
                            }
                        </ul>
                </div>
            </div>
        </div> @*row*@

        <br />
        <div>
            @if (User.IsInRole("Captain"))
            {
                <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
            }
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</body>