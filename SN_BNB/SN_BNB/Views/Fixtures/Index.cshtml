@model IEnumerable<SN_BNB.Models.Fixture>

@{
    ViewData["Title"] = "Index";
}
<link href="~/css/team.css" rel="stylesheet" />
<br />
<h3>Schedule</h3>
@if (User.IsInRole("Admin"))
{
    <p id="createNew">
        <a asp-action="Create" style="color:purple;">Create New</a>
    </p>
}

<form asp-action="Index">
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item dropdown ">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            2018-2019 Men's Divisions
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">2018-2019 Men's Division 1/2</a>
                            <a class="dropdown-item" href="#">2018-2019 Men's Division 3</a>
                            <a class="dropdown-item" href="#">2018-2019 Men's Division 4</a>
                            <a class="dropdown-item" href="#">2018-2019 Women's Division</a>
                        </div>
                    </li>
                </ul>
                @Html.TextBox("searchString", null, htmlAttributes: new { @class = "form-control", @placeholder = "Search by Team/Season", @style = "width:250px" })
                <button id="btnSearch" class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </div>
        </nav>

        <input type="hidden" name="sortDirection" value="@ViewData["sortDirection"]" />
        <input type="hidden" name="sortField" value="@ViewData["sortField"]" />
        <div class="table-responsive-sm">
            <table class="table table-light table-hover table-striped">
                <thead class="thead-light">
                    <tr>
                        <th>
                            <input id="playCol" type="submit" name="actionButton" value="Season" class="btn btn-link" />
                        </th>
                        <th>
                            <input id="playCol" type="submit" name="actionButton" value="Time" class="btn btn-link" />
                        </th>
                        <th>
                            <input id="playCol" type="submit" name="actionButton" value="Home Team" class="btn btn-link" />
                        </th>
                        <th>
                            <input id="playCol" type="submit" name="actionButton" value="Home Score" class="btn btn-link" />
                        </th>
                        <th>
                            <input id="playCol" type="submit" name="actionButton" value="Away Team" class="btn btn-link" />
                        </th>
                        <th>
                            <input id="playCol" type="submit" name="actionButton" value="Away Score" class="btn btn-link" />
                        </th>
                        <th style="color:lightgrey">----------------</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr style="@(ViewBag.TeamID == item.HomeTeam.ID || ViewBag.TeamID == item.AwayTeam.ID ? "background-color: chartreuse" : string.Empty)">
                        <td>
                            @Html.DisplayFor(modelItem => item.Season.Season_Title)
                        </td>
                        <td>
                            @item.FixtureDateTime.ToString("MM/dd/yyyy")
                        </td>
                        <td>
                            @if (item.HomeScore >= item.AwayScore)
                            {
                                <b>@Html.DisplayFor(modelItem => item.HomeTeam.TeamName)</b>
                            }
                            else {
                                @Html.DisplayFor(modelItem => item.HomeTeam.TeamName)
                            }
                        </td>
                        <td>
                            @if (item.HomeScore >= item.AwayScore)
                            {
                                <b>@Html.DisplayFor(modelItem => item.HomeScore)</b>
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => item.HomeScore)
                            }
                        </td>

                        <td>
                            @if (item.AwayScore >= item.HomeScore)
                            {
                                <b>@Html.DisplayFor(modelItem => item.AwayTeam.TeamName)</b>
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => item.AwayTeam.TeamName)
                            }
                        </td>

                        <td>
                            @if (item.AwayScore >= item.HomeScore)
                            {
                                <b>@Html.DisplayFor(modelItem => item.AwayScore)</b>
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => item.AwayScore)
                            }
                        </td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID">
                                <img src="~/images/edit.png" style="width:28px; height:28px" />
                            </a> |
                            <a asp-action="Details" asp-route-id="@item.ID">
                                <img src="~/images/detail.png" style="width:28px; height:28px" />
                            </a> |
                            <a asp-action="Delete" asp-route-id="@item.ID">
                                <img src="~/images/Archive.png" style="width:28px; height:28px" />
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>
