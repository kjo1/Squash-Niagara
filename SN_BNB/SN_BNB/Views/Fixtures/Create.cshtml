@model SN_BNB.Models.Fixture

@{
    ViewData["Title"] = "Create";
}
<br />
<h2>Create</h2>

<h4>Fixture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Season_idSeason" class="control-label"></label>
                <select asp-for="Season_idSeason" class="form-control" asp-items="ViewBag.Season_idSeason">
                    <option>Select a Season</option>
                </select>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FixtureDateTime" class="control-label"></label>
                <input asp-for="FixtureDateTime" class="form-control" />
                <span asp-validation-for="FixtureDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idHomeTeam" class="control-label"></label>
                <select asp-for="idHomeTeam" class="form-control" asp-items="ViewBag.idHomeTeam">
                    <option>Select a Home Team</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="idAwayTeam" class="control-label"></label>
                <select asp-for="idAwayTeam" class="form-control" asp-items="ViewBag.idAwayTeam">
                    <option>Select an Away Team</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-light">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
