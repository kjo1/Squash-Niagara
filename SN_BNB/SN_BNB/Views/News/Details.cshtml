@model SN_BNB.Models.News

@{
    ViewData["Title"] = "Details";
}
<br />
<h2>Details</h2>

<div>
    <hr />
    <div class="container">
        <h3>@Html.DisplayFor(model => model.Title)</h3><br />
        <div class="container-fluid">
        <p>@Html.Raw(Model.Content)</p><br />
        </div>
        <p><i>@Html.DisplayFor(model => model.Date)</i></p>
    </div>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" class="btn btn-light" asp-route-id="@Model.ID">Edit</a><br />
    }
    <a asp-action="Index" class="btn btn-light">Back to List</a>
</div>
