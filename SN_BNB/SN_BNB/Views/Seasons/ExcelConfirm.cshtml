@model List<Fixture>
@{
    ViewData["Title"] = "ExcelConfirm";
}

<h2>The following Fixtures have been added to the new Season:</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Home Score
            </th>
            <th>
                Away Score
            </th>
            <th>
                Location
            </th>
            <th>
                Season
            </th>
            <th>
                Home Team
            </th>
            <th>
                Away Team
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Fixture item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FixtureDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HomeScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AwayScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.location_locationId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Season.Season_Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HomeTeam.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AwayTeam.TeamName)
            </td>
            <td>
                <a asp-action="EditExcel" asp-route-id="@item.ID">
                    <img src="~/images/edit.png" style="width:28px; height:28px" />
                </a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="form-group">
    <form action="/Seasons/Index">
        <input type="submit" value="Ok" class="btn btn-default" />
    </form>
</div>