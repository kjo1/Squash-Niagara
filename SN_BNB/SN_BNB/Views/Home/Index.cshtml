@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Home Page";
}
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<link href="~/css/style.css" rel="stylesheet" />

<body>
    <content>
        <div class="container">

            <div class="jumbotron">
                <h3>News</h3>
                <hr>
                <p>@Html.Raw(ViewBag.News.Content)</p>
            </div>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="card">
                            <div class="card-header">
                                @*This will be replace with first name if possible or be removed if we can't make it working*@
                                @*<span id="userID">@UserManager.GetUserName(User) </span>'s*@ Upcoming Fixture
                            </div>
                            <div class="card-body">
                                <ul>
                                    @foreach (Fixture fu in ViewBag.fixture)
                                    {
                                        <li style="margin-bottom:8px;">
                                            <span id="dateTime" style="font-size:12px">@fu.FixtureDateTime.ToLongDateString()</span><br />
                                            <span id="homeTeam">@fu.HomeTeam.TeamName</span>
                                            <span style="font-weight:600; font-size:16px">vs</span>
                                            <span id="awayTeam">@fu.AwayTeam.TeamName</span>
                                        </li>
                                    }
                                </ul>
                            </div>
                            <span style="text-align:center; margin-bottom: 20px;"> <a id="btn" href="/Fixtures/Index" class="btn btn-primary" style="font-weight:700;">All Matches</a></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card">
                            <div class="card-header">
                                @*This will be replace with first name if possible or be removed if we can't make it working*@
                                @*<span id="userID">@UserManager.GetUserName(User) </span>'s*@Previous Fixture Result
                            </div>
                            <div class="card-body">
                                <ul>
                                    @foreach (Fixture fx in ViewBag.fixtureLast)
                                    {
                                        <li style="margin-bottom:8px;">
                                            <span id="dateTime" style="font-size:12px;">@fx.FixtureDateTime.ToShortDateString()</span><br />
                                            <span id="homeTeam">@fx.HomeTeam.TeamName</span> <span id="fixScore">  - @fx.HomeScore </span>
                                            <span style="font-weight:600; font-size:16px">vs</span>
                                            <span id="fixScore"> @fx.AwayScore - </span>
                                            <span id="awayTeam">@fx.AwayTeam.TeamName</span>
                                        </li>
                                    }
                                </ul>
                            </div>
                            <span style="text-align:center; margin-top:-15px; margin-bottom: 20px;"> <a id="btn" href="/Fixtures/Index" class="btn btn-primary" style="font-weight:700;">All Matches</a></span><br />
                        </div>
                    </div>
                </div>
            </div>
            <br>
        }

        <h5 style="padding: 10px; font-weight:700;">Position Leaders</h5>
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        Position 1
                    </div>
                    <div class="card-body">
                        <b>Huck, Murray</b>
                        <br>
                        <p class="card-text" style="color: darkred"><i>Not Confirmed</i></p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        Position 2
                    </div>
                    <div class="card-body">
                        <b>Forgeron, Dave</b>
                        <br>
                        <p class="card-text" style="color: darkred"><i>Not Confirmed</i></p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        Position 3
                    </div>
                    <div class="card-body">
                        <b>Vanderzalm, Brett</b>
                        <br>
                        <p class="card-text" style="color: limegreen"><i>Confirmed</i></p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        Position 4
                    </div>
                    <div class="card-body">
                        <b>Scott, Angus</b>
                        <br>
                        <p class="card-text" style="color: darkred"><i>Not Confirmed</i></p>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <p>To learn more about Squash Niagara click one of the buttons below.</p>
        <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
            <div class="container-fluid">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item dropdown">
                        <a id="btn" class="btn btn-primary" style="margin: 0px 5px 5px 0px;" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Rules
                        </a>
                        <div id="mainNav" class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/Home/LeagueRules">League Rules</a>
                            <a class="dropdown-item" href="/Home/LeagueConstitution">League Constitution</a>
                        </div>
                    <li class="nav-item">
                        <a id="btn" class="btn btn-primary" href="/Home/Documents">Documents</a>
                    </li>
                </ul>
                @*</div>*@
            </div>
        </nav>
        <br>
        <br>

    </content>
</body>
