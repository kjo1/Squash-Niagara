@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Home Page";
}
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<link href="~/css/style.css" rel="stylesheet" />

<body>
    <content>
        <div class="container">

            <div class="jumbotron">
                <h3>Welcome!</h3>
                <p>This is a simple hero unit, a simple jumbotron-style component for welcoming users to the page</p>
                <hr>
                <p>To learn more about Squash Niagara click one of the buttons below.</p>
                <p>
                    <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
                        <div class="container-fluid">
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item dropdown">
                                    <a id="btn" class="btn btn-primary" style="margin: 0px 5px 5px 0px;" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Rules
                                    </a>
                                    <div id="mainNav" class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" href="/Home/LeagueRules">League Rules</a>
                                        <a class="dropdown-item" href="/Home/LeagueConstitution">League Constitution</a>
                                    </div>
                                <li class="nav-item">
                                    <a id="btn" class="btn btn-primary" href="/Home/Documents">Documents</a>
                                </li>
                            </ul>
                            @*</div>*@
                        </div>
                    </nav>
                </p>
            </div>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="container">
                <div class="row">
                    <div class="card">

                        <div class="card-header">
                            <span id="userID">@UserManager.GetUserName(User) @*This will be replace with first name if possible or be removed if we can't make it working*@</span>'s Upcoming Fixture
                        </div>
                        <div class="card-body">
                            <ul>
                                @foreach (Fixture f in ViewBag.fixture)
                                {
                                    <li>
                                        <span id="dateTime">@f.FixtureDateTime.ToLongDateString()</span>
                                        <span id="homeTeam">@f.HomeTeam.TeamName</span>
                                        <span style="font-weight:600; font-size:16px">vs</span>
                                        <span id="awayTeam">@f.AwayTeam.TeamName</span>
                                    </li>
                                }
                            </ul>
                        </div>
                        <span style="text-align:center;"> <a id="btn" href="/Fixtures/Index" class="btn btn-primary" style="font-weight:700;">All Matches</a></span>

                    </div>
                    <div class="col">
                        <div class="card">
                            <div class="card-header">
                                <span id="userID">@UserManager.GetUserName(User) @*This will be replace with first name if possible or be removed if we can't make it working*@</span>'s Last Fixture
                            </div>
                            <ul>
                                @foreach (Fixture fx in ViewBag.fixtureLast)
                                {
                                    <li>
                                        <span id="dateTime">@fx.FixtureDateTime.ToLongDateString()</span>
                                        <span id="homeTeam">@fx.HomeTeam.TeamName</span>
                                        <span style="font-weight:600; font-size:16px">vs</span>
                                        <span id="awayTeam">@fx.AwayTeam.TeamName</span>
                                    </li>
                                }
                            </ul>
                        </div>
                        <div class="card-body">
                        </div>
                    </div>
                </div>
            </div>
            <br>

        }

        <h5 style="padding: 10px; font-weight:700;">Position Leaders</h5>
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        Position 1
                    </div>
                    <div class="card-body">
                        <b>Huck, Murray</b>
                        <br>
                        <p class="card-text" style="color: darkred"><i>Not Confirmed</i></p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        Position 2
                    </div>
                    <div class="card-body">
                        <b>Forgeron, Dave</b>
                        <br>
                        <p class="card-text" style="color: darkred"><i>Not Confirmed</i></p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        Position 3
                    </div>
                    <div class="card-body">
                        <b>Vanderzalm, Brett</b>
                        <br>
                        <p class="card-text" style="color: limegreen"><i>Confirmed</i></p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        Position 4
                    </div>
                    <div class="card-body">
                        <b>Scott, Angus</b>
                        <br>
                        <p class="card-text" style="color: darkred"><i>Not Confirmed</i></p>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <br>

    </content>
</body>
